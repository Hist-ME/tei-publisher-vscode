{
  "name": "tei-publisher-vscode",
  "displayName": "tei-publisher-vscode",
  "description": "Visual Studio Code extension to support TEI editing",
  "publisher": "eXist-db",
  "repository": "https://gitlab.com/karl-barth/kb-vscode.git",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "extensionDependencies": [
    "redhat.vscode-xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "teipublisher",
          "title": "TEI Publisher Tools",
          "icon": "media/logo.png"
        }
      ]
    },
    "views": {
      "teipublisher": [
        {
          "type": "webview",
          "id": "teipublisher.entityView",
          "name": "TEI Entity Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "teipublisher.lookup",
        "title": "Look up the current selection",
        "category": "teipublisher"
      },
      {
        "command": "teipublisher.preview",
        "title": "Preview the current document",
        "category": "teipublisher"
      }
    ],
    "keybindings": [
      {
        "command": "teipublisher.lookup",
        "key": "ctrl-shift-e",
        "mac": "cmd-shift-e"
      },
      {
        "command": "teipublisher.preview",
        "key": "ctrl-shift-a",
        "mac": "cmd-shift-a"
      },
      {
        "command": "editor.action.insertSnippet",
        "key": "ctrl-shift-f",
        "mac": "cmd-shift-f",
        "args": {
          "name": "foreign"
        }
      }
    ],
    "snippets": [
      {
        "language": "xml",
        "path": "./snippets/tei.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "TEI Publisher Extension configuration",
      "properties": {
        "teipublisher.apiList": {
          "type": "array",
          "scope": "application",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
            }
          },
          "default": [
            {
              "name": "places",
              "label": "Orte",
              "plugin": "kba"
            },
            {
              "name": "actors",
              "label": "Akteure",
              "plugin": "kba"
            },
            {
              "name": "terms",
              "label": "Sachen",
              "plugin": "kba"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "axios": "^0.21.0"
  }
}
